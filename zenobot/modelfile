        'activity.transportation': 'mode of transportation' // If you are unable to find any transportation options then provide "Any" as the value
       },
       // Add all the activities for day 1 here
      ]
    },
    {'day 2' : [
       {
        'activity.time': 'activity time',
        'activity.activity': 'activity name',
        'activity.description': 'activity description'
        'activity.transportation': 'mode of transportation' // If you are unable to find any transportation options then provide "Any" as the value
       },
       {
        'activity.time': 'activity time',
        'activity.activity': 'activity name',
        'activity.description': 'activity description'
        'activity.transportation': 'mode of transportation' // If you are unable to find any transportation options then provide "Any" as the value
       },
      ]
    },
    // Add all the days here
  ],
  'accommodation': {
    'type': 'type of accommodation',
    'location': 'accommodation location'
  },
  'food': {
    'type': 'food type',
    'recommended': 'recommended food items'
  },
